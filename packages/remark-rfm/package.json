{
  "name": "@ricora/remark-rfm",
  "version": "0.0.0",
  "description": "remark plugin to support RFM",
  "private": false,
  "keywords": [
    "markdown",
    "mdx",
    "unified",
    "remark",
    "remark-plugin",
    "rfm",
    "ricora"
  ],
  "author": "ricora",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ricora/ricora-flavored-markdown.git"
  },
  "bugs": {
    "url": "https://github.com/ricora/ricora-flavored-markdown/issues"
  },
  "homepage": "https://github.com/ricora/ricora-flavored-markdown",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "src",
    "dist",
    "!**/*.test.ts",
    "!**/*.tsbuildinfo",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rimraf dist && tsc --project tsconfig.build.json",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "release": "bun run build && bun run test:ci && bun run changeset publish",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {},
  "dependencies": {},
  "devDependencies": {
    "@tsconfig/node16": "16.1.3",
    "@types/bun": "1.1.8",
    "@vitest/coverage-v8": "2.0.5",
    "rimraf": "6.0.1",
    "typescript": "^5.0.0",
    "vitest": "2.0.5"
  },
  "packageManager": "bun@1.1.17"
}
